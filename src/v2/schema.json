{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://raw.githubusercontent.com/edave64/doki-doki-dialog-generator-pack-format/master/src/v1/schema.json",
	"definitions": {
		"folder": {
			"type": "string",
			"title": "The folder, in which all other paths in this file will be searched",
			"default": "/",
			"examples": ["./"]
		},
		"assetCollection": {
			"type": "array",
			"title": "A list of images that make up an asset",
			"items": {
				"type": "string",
				"title": "An image"
			}
		},
		"variantCollection": {
			"type": "array",
			"title": "A collection of assets that you can choose between",
			"items": {
				"$ref": "#/definitions/assetCollection"
			}
		},
		"id": {
			"type": "string",
			"pattern": "^[_-\\w\\.]+(:[_-\\w\\.]+)?$",
			"default": ""
		},
		"coordinates": {
			"type": "array",
			"title": "A position or size of an object",
			"items": {
				"type": "integer"
			},
			"minLength": 2,
			"maxLength": 2
		}
	},
	"type": "object",
	"title": "The Root Schema",
	"required": ["$schema", "version", "packId"],
	"additionalProperties": false,
	"properties": {
		"version": {
			"type": "string",
			"const": "2.0"
		},
		"$schema": {
			"type": "string"
		},
		"packId": {
			"type": "string",
			"title": "The content pack id",
			"pattern": "^(.*)$"
		},
		"packCredits": {
			"type": "string",
			"title": "The credits of the content pack",
			"default": "",
			"examples": [
				"<a href='https://www.reddit.com/dq74jr' target='_blank' rel='noopener noreferrer'>Created by</a> anita6artania"
			]
		},
		"folder": { "$ref": "#/definitions/folder" },
		"characters": {
			"type": "array",
			"items": {
				"type": "object",
				"required": ["id"],
				"properties": {
					"id": {
						"type": "string",
						"title": "The character id",
						"description": "This id needs to be unique for every character. If the name collides with an existing character, they will be merged",
						"$ref": "#/definitions/id"
					},
					"label": {
						"type": "string",
						"title": "The name of the character",
						"examples": [],
						"pattern": "^(.*)$"
					},
					"folder": { "$ref": "#/definitions/folder" },
					"chibi": {
						"type": "string",
						"title": "The path to the chibi file",
						"pattern": "^(.*)$"
					},
					"heads": {
						"type": "object",
						"title": "The head groups",
						"patternProperties": {
							".*": {
								"title": "Headgroup",
								"oneOf": [
									{
										"$ref": "#/definitions/variantCollection"
									},
									{
										"type": "object",
										"required": ["variants"],
										"properties": {
											"folder": {
												"$ref": "#/definitions/folder"
											},
											"variants": {
												"$ref": "#/definitions/variantCollection"
											},
											"previewSize": {
												"$ref": "#/definitions/coordinates"
											},
											"previewOffset": {
												"$ref": "#/definitions/coordinates"
											}
										}
									}
								]
							}
						},
						"additionalProperties": false
					},
					"styleGroups": {
						"type": "array",
						"items": {
							"required": ["id", "styles"],
							"properties": {
								"id": { "type": "string", "$ref": "#/definitions/id" },
								"folder": { "$ref": "#/definitions/folder" },
								"styleComponents": {
									"type": "array",
									"items": {
										"type": "object",
										"required": ["id"],
										"properties": {
											"label": { "type": "string" },
											"id": { "type": "string", "$ref": "#/definitions/id" },
											"variants": {
												"type": "object",
												"patternProperties": {
													".*": {
														"type": "string"
													}
												},
												"additionalProperties": false
											}
										},
										"additionalProperties": false
									}
								},
								"styles": {
									"type": "array",
									"title": "A list of styles",
									"items": {
										"type": "object",
										"title": "A style",
										"required": [],
										"properties": {
											"components": {
												"type": "object",
												"patternProperties": {
													".*": {
														"type": "string"
													}
												},
												"additionalProperties": false
											},
											"poses": {
												"type": "array",
												"title": "Poses",
												"items": {
													"type": "object",
													"title": "A pose",
													"required": ["id", "compatibleHeads"],
													"properties": {
														"id": {
															"type": "string",
															"title": "The name of a pose. If a content pack includes a pose with the same name as an existing one, the get merged together",
															"$ref": "#/definitions/id"
														},
														"compatibleHeads": {
															"title": "A list of compatible head groups",
															"type": "array",
															"items": {
																"type": "string",
																"title": "A head group"
															}
														},
														"renderCommands": {
															"title": "Steps to render the pose",
															"type": "array",
															"items": {
																"type": "object",
																"properties": {
																	"offset": {
																		"$ref": "#/definitions/coordinates"
																	}
																},
																"oneOf": [
																	{
																		"required": ["type", "images"],
																		"properties": {
																			"type": {
																				"const": "image"
																			},
																			"images": {
																				"$ref": "#/definitions/assetCollection"
																			},
																			"folder": {
																				"$ref": "#/definitions/folder"
																			}
																		}
																	},
																	{
																		"required": ["type", "part"],
																		"properties": {
																			"type": {
																				"const": "pose-part"
																			},
																			"part": {
																				"type": "string"
																			}
																		}
																	},
																	{
																		"required": ["type"],
																		"properties": {
																			"type": {
																				"const": "head"
																			}
																		}
																	}
																]
															},
															"default": [
																{ "type": "head" },
																{
																	"type": "pose-part",
																	"part": "Left"
																},
																{
																	"type": "pose-part",
																	"part": "Right"
																},
																{
																	"type": "pose-part",
																	"part": "Variant"
																}
															]
														},
														"folder": {
															"$ref": "#/definitions/folder"
														},
														"previewSize": {
															"$ref": "#/definitions/coordinates"
														},
														"previewOffset": {
															"$ref": "#/definitions/coordinates"
														},
														"size": {
															"$ref": "#/definitions/coordinates"
														},
														"positions": {
															"type": "object",
															"patternProperties": {
																".*": {
																	"$ref": "#/definitions/variantCollection"
																}
															}
														}
													},
													"additionalProperties": false
												}
											}
										},
										"additionalProperties": false
									}
								}
							},
							"additionalProperties": false
						}
					}
				},
				"additionalProperties": false
			}
		},
		"backgrounds": {
			"type": "array",
			"items": {
				"type": "object",
				"required": ["id", "variants"],
				"properties": {
					"id": {
						"type": "string",
						"title": "The background id",
						"$ref": "#/definitions/id"
					},
					"label": {
						"type": "string",
						"title": "The label of the background"
					},
					"folder": { "$ref": "#/definitions/folder" },
					"variants": {
						"$ref": "#/definitions/variantCollection",
						"title": "All variants of the background"
					}
				},
				"additionalProperties": false
			}
		},
		"sprite": {
			"type": "array",
			"items": {
				"type": "object",
				"required": ["id", "variants"],
				"properties": {
					"id": {
						"type": "string",
						"title": "The sprite id",
						"$ref": "#/definitions/id"
					},
					"label": {
						"type": "string",
						"title": "The label of the sprite"
					},
					"folder": { "$ref": "#/definitions/folder" },
					"variants": {
						"$ref": "#/definitions/variantCollection",
						"title": "All variants of the sprite"
					}
				},
				"additionalProperties": false
			}
		},
		"poemStyles": {
			"type": "array",
			"items": {
				"type": "object",
				"required": ["label"],
				"properties": {
					"label": {
						"type": "string",
						"title": "The label of the sprite"
					},
					"defaultFont": {
						"type": "string",
						"title": "The font",
						"default": "aller"
					},
					"fontSize": {
						"type": "number",
						"title": "The font size"
					},
					"lineSpacing": {
						"type": "number",
						"title": "The spacing between lines (As a multiplier of the font size)"
					},
					"letterSpacing": {
						"type": "number",
						"title": "The spacing between letters"
					}
				},
				"additionalProperties": false
			}
		},
		"poemBackgrounds": {
			"type": "array",
			"items": {
				"type": "object",
				"required": ["label", "images"],
				"properties": {
					"label": {
						"type": "string",
						"title": "The label of the poem background"
					},
					"folder": { "$ref": "#/definitions/folder" },
					"images": {
						"$ref": "#/definitions/assetCollection",
						"title": "All images of the poem"
					},
					"fontColor": {
						"type": "string",
						"title": "The font color on this poem background"
					}
				},
				"additionalProperties": false
			}
		},
		"colors": {
			"type": "array",
			"items": {
				"type": "object",
				"required": ["color"],
				"properties": {
					"label": {
						"type": "string",
						"title": "The label of the color"
					},
					"color": {
						"type": "string",
						"title": "The hex rgba code of the color"
					}
				},
				"additionalProperties": false
			}
		},
		"fonts": {
			"type": "array",
			"items": {
				"type": "object",
				"required": ["id", "variants"],
				"properties": {
					"id": {
						"type": "string",
						"title": "The font id",
						"$ref": "#/definitions/id"
					},
					"label": {
						"type": "string",
						"title": "The label of the font"
					},
					"folder": { "$ref": "#/definitions/folder" },
					"files": {
						"$ref": "#/definitions/assetCollection",
						"title": "All font files"
					}
				},
				"additionalProperties": false
			}
		}
	}
}
